<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Maui.TheraOffice.ViewModels"
             x:Class="Maui.TheraOffice.Views.PhysicianDetailPage"
             Title="Physician Details"
             x:DataType="viewmodels:PhysicianDetailViewModel">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Entry Placeholder="Name" Text="{Binding Physician.Name}" />
        <Entry Placeholder="License Number" Text="{Binding Physician.LicenseNumber}" />
        <DatePicker Date="{Binding Physician.GraduationDate}" />
        <Entry Placeholder="Specializations (comma separated)" Text="{Binding SpecializationsText}" />
        <Button Text="Save" Command="{Binding SavePhysicianCommand}" />
        <Button Text="Cancel" Command="{Binding CancelCommand}" BackgroundColor="Gray" />
    </VerticalStackLayout>
</ContentPage>