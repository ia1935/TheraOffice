<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Maui.TheraOffice.ViewModels"
             x:Class="Maui.TheraOffice.Views.PatientDetailPage"
             Title="Patient Details"
             x:DataType="viewmodels:PatientDetailViewModel">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Entry Placeholder="Name" Text="{Binding Patient.Name}" />
        <Entry Placeholder="Address" Text="{Binding Patient.Address}" />
        <DatePicker Date="{Binding Patient.Birthdate}" />
        <Entry Placeholder="Race" Text="{Binding Patient.Race}" />
        <Entry Placeholder="Gender" Text="{Binding Patient.Gender}" />
        <Entry Placeholder="Diagnoses (comma separated)" Text="{Binding DiagnosesText}" />
        <Entry Placeholder="Prescriptions (comma separated)" Text="{Binding PrescriptionsText}" />
        <Button Text="Save" Command="{Binding SavePatientCommand}" />
        <Button Text="Cancel" Command="{Binding CancelCommand}" BackgroundColor="Gray" />
    </VerticalStackLayout>
</ContentPage>