<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Maui.TheraOffice.ViewModels"
             xmlns:models="clr-namespace:Maui.TheraOffice.Models"
             x:Class="Maui.TheraOffice.Views.AppointmentDetailPage"
             Title="Appointment Details"
             x:DataType="viewmodels:AppointmentDetailViewModel">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Picker Title="Select Patient"
                ItemsSource="{Binding Patients}"
                SelectedItem="{Binding SelectedPatient}"
                ItemDisplayBinding="{Binding Name}" />

        <Picker Title="Select Physician"
                ItemsSource="{Binding Physicians}"
                SelectedItem="{Binding SelectedPhysician}"
                ItemDisplayBinding="{Binding Name}" />

        <DatePicker Date="{Binding Appointment.StartTime.Date}" />
        <TimePicker Time="{Binding Appointment.StartTime.TimeOfDay}" />
        <TimePicker Time="{Binding Appointment.EndTime.TimeOfDay}" />
        <Entry Placeholder="Notes" Text="{Binding Appointment.Notes}" />
        <Button Text="Save" Command="{Binding SaveAppointmentCommand}" />
        <Button Text="Cancel" Command="{Binding CancelCommand}" BackgroundColor="Gray" />
    </VerticalStackLayout>
</ContentPage>