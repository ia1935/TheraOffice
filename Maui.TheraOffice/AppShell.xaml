<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.TheraOffice.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.TheraOffice.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Patients"
        ContentTemplate="{DataTemplate local:PatientListPage}"
        Route="PatientListPage" />

    <ShellContent
        Title="Physicians"
        ContentTemplate="{DataTemplate local:PhysicianListPage}"
        Route="PhysicianListPage" />

    <ShellContent
        Title="Appointments"
        ContentTemplate="{DataTemplate local:AppointmentListPage}"
        Route="AppointmentListPage" />

</Shell>