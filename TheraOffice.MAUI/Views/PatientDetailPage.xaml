<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheraOffice.MAUI.Views.PatientDetailPage"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="First Name" FontAttributes="Bold" />
            <Entry Text="{Binding FirstName}" Placeholder="Enter first name" />

            <Label Text="Last Name" FontAttributes="Bold" />
            <Entry Text="{Binding LastName}" Placeholder="Enter last name" />

            <Label Text="Address" FontAttributes="Bold" />
            <Editor Text="{Binding Address}" 
                    Placeholder="Enter address"
                    HeightRequest="80" />

            <Label Text="Birth Date" FontAttributes="Bold" />
            <DatePicker Date="{Binding BirthDate}"
                       MaximumDate="{x:Static x:DateTime.Now}" />

            <Label Text="Gender" FontAttributes="Bold" />
            <Picker x:Name="GenderPicker"
                    SelectedItem="{Binding Gender}">
                <Picker.Items>
                    <x:String>Male</x:String>
                    <x:String>Female</x:String>
                    <x:String>Other</x:String>
                    <x:String>Prefer not to say</x:String>
                </Picker.Items>
            </Picker>

            <Label Text="Race/Ethnicity" FontAttributes="Bold" />
            <Picker x:Name="RacePicker"
                    SelectedItem="{Binding Race}">
                <Picker.Items>
                    <x:String>American Indian or Alaska Native</x:String>
                    <x:String>Asian</x:String>
                    <x:String>Black or African American</x:String>
                    <x:String>Hispanic or Latino</x:String>
                    <x:String>Native Hawaiian or Other Pacific Islander</x:String>
                    <x:String>White or Caucasian</x:String>
                    <x:String>Two or More Races</x:String>
                    <x:String>Other</x:String>
                    <x:String>Prefer not to say</x:String>
                </Picker.Items>
            </Picker>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Grid.Column="0"
                        Text="Save"
                        Command="{Binding SaveCommand}"
                        BackgroundColor="{StaticResource Primary}" />
                <Button Grid.Column="1"
                        Text="Cancel"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="Gray" />
            </Grid>

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              IsVisible="{Binding IsBusy}"
                              HorizontalOptions="Center"
                              Margin="0,20,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
