<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TheraOffice.MAUI.ViewModels"
             x:Class="TheraOffice.MAUI.Views.AppointmentsPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddAppointmentCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*" Padding="10">
        <Button Grid.Row="0" 
                Text="Refresh" 
                Command="{Binding LoadAppointmentsCommand}"
                Margin="0,0,0,10" />

        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Appointments}"
                        SelectionMode="None">
            <CollectionView.EmptyView>
                <Label Text="No appointments found. Tap Add to schedule a new appointment."
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="Gray" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Delete"
                                          BackgroundColor="Red"
                                          Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AppointmentsViewModel}}, Path=DeleteAppointmentCommand}"
                                          CommandParameter="{Binding .}" />
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Frame Margin="5" Padding="10" CornerRadius="5" HasShadow="True">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AppointmentsViewModel}}, Path=SelectAppointmentCommand}"
                                                     CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                                <Label Grid.Row="0"
                                       Text="{Binding Appointment.AppointmentDateTime, StringFormat='{0:dddd, MMMM d, yyyy at h:mm tt}'}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                                <Label Grid.Row="1"
                                       Text="{Binding PatientName, StringFormat='Patient: {0}'}"
                                       TextColor="Gray" />
                                <Label Grid.Row="2"
                                       Text="{Binding PhysicianName, StringFormat='Physician: {0}'}"
                                       TextColor="Gray" />
                                <Label Grid.Row="3"
                                       Text="{Binding Appointment.Reason, StringFormat='Reason: {0}'}"
                                       TextColor="Gray"
                                       FontSize="12" />
                            </Grid>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator Grid.Row="1" 
                          IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center" />
    </Grid>
</ContentPage>
