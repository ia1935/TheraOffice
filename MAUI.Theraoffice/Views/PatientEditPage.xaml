<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI.Theraoffice.Views.PatientEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Edit Patient">
    <ScrollView>
        <VerticalStackLayout Padding="12" Spacing="8">
            <Entry Text="{Binding Patient.FirstName}" Placeholder="First name" />
            <Entry Text="{Binding Patient.LastName}" Placeholder="Last name" />
            <Entry Text="{Binding Patient.Address}" Placeholder="Address" />
            <DatePicker Date="{Binding Patient.BirthDate}" />
            <Entry Text="{Binding Patient.Race}" Placeholder="Race" />
            <Entry Text="{Binding Patient.Gender}" Placeholder="Gender" />
            <HorizontalStackLayout Spacing="8">
                <Button Text="Save" Clicked="OnSave" />
                <Button Text="Cancel" Clicked="OnCancel" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
