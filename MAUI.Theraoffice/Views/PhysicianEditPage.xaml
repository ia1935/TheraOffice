<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI.Theraoffice.Views.PhysicianEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Edit Physician">
    <ScrollView>
        <VerticalStackLayout Padding="12" Spacing="8">
            <Entry Text="{Binding Physician.FirstName}" Placeholder="First name" />
            <Entry Text="{Binding Physician.LastName}" Placeholder="Last name" />
            <Entry Text="{Binding Physician.LicenseNumber}" Placeholder="License number" />
            <DatePicker Date="{Binding Physician.GraduationDate}" />
            <Entry Text="{Binding Physician.Specializations[0]}" Placeholder="Specialization (comma-separated support omitted)" />
            <HorizontalStackLayout Spacing="8">
                <Button Text="Save" Clicked="OnSave" />
                <Button Text="Cancel" Clicked="OnCancel" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
